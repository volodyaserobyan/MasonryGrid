{
  "compilerOptions": {
    "target": "ES2020",                
    "module": "ESNext",                
    "moduleResolution": "node",        
    "jsx": "react-jsx",                
    "strict": true,                    
    "esModuleInterop": true,           
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*"
  ]
}
